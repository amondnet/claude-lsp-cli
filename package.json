{
  "name": "claude-lsp-cli",
  "version": "4.0.0",
  "description": "File-based type checker for Claude Code - supports 11+ programming languages with direct tool invocation",
  "module": "src/file-checker.ts",
  "type": "module",
  "bin": {
    "claude-lsp-cli": "./bin/claude-lsp-cli"
  },
  "files": [
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teamchong/claude-lsp-cli.git"
  },
  "keywords": [
    "lsp",
    "language-server",
    "typescript",
    "python",
    "rust",
    "go",
    "java",
    "cpp",
    "multi-language",
    "claude-code",
    "bun",
    "diagnostics",
    "code-intelligence",
    "auto-install"
  ],
  "author": "Steven Chong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teamchong/claude-lsp-cli/issues"
  },
  "homepage": "https://github.com/teamchong/claude-lsp-cli#readme",
  "scripts": {
    "test": "bun test",
    "test:coverage": "c8 --reporter=text --reporter=lcov bun test",
    "coverage": "c8 --reporter=text --reporter=html bun test",
    "coverage:check": "c8 --check-coverage --lines 80 --functions 80 --branches 80 bun test",
    "build:cli": "mkdir -p bin && bun build src/cli.ts --compile --outfile bin/claude-lsp-cli",
    "build": "bun run build:cli",
    "prepublishOnly": "bun run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "c8": "^10.1.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "pyright": "^1.1.389"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/minimist": "^1.2.5",
    "minimist": "^1.2.8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
