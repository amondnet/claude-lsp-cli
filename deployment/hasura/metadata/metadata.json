{
  "resource_version": 5,
  "metadata": {
    "version": 3,
    "sources": [
      {
        "name": "default",
        "kind": "postgres",
        "tables": [
          {
            "table": { "name": "conversations", "schema": "kepler_app" },
            "array_relationships": [
              {
                "name": "messages",
                "using": {
                  "manual_configuration": {
                    "column_mapping": { "id": "conversation_id" },
                    "insertion_order": null,
                    "remote_table": { "name": "messages", "schema": "kepler_app" }
                  }
                }
              }
            ]
          },
          {
            "table": { "name": "messages", "schema": "kepler_app" },
            "object_relationships": [
              {
                "name": "conversation",
                "using": {
                  "manual_configuration": {
                    "column_mapping": { "conversation_id": "id" },
                    "insertion_order": null,
                    "remote_table": { "name": "conversations", "schema": "kepler_app" }
                  }
                }
              }
            ]
          }
        ],
        "configuration": {
          "connection_info": {
            "database_url": { "from_env": "HASURA_GRAPHQL_DATABASE_URL" },
            "isolation_level": "read-committed",
            "pool_settings": {
              "connection_lifetime": 600,
              "idle_timeout": 180,
              "max_connections": 50,
              "retries": 1
            },
            "use_prepared_statements": true
          }
        }
      }
    ]
  }
}
